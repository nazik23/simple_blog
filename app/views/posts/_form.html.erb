<%= form_with(model: post, local: true, html: {multipart: true}) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
	  <%= form.label :picture %>
	  <%= form.file_field :picture %>
	</div>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, rows: 10, cols: 60 %>
  </div>

  <div class="field">
    <%= form.label :tag_list, 'Tags (separated by commas)'%></br>
    <%= form.text_field :tag_list, value: post.tag_list.to_s %>
  </div>

  <div class="actions">
    <%= form.submit "Add Post" %>
  </div>
<% end %>
